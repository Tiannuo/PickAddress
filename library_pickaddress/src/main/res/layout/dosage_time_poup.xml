<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33000000">

    <LinearLayout
        android:id="@+id/container_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white_FFFFFF"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/container_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@null"
                android:text="@string/cancel"
                android:textColor="@color/gray_A1A1A1"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_dosage_time_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="请选择时间"
                android:textColor="@color/black_44444"
                android:textSize="@dimen/sp_16" />

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:text="@string/confirm"
                android:textColor="@color/blue_4B9F00"
                android:textSize="@dimen/sp_16" />
        </RelativeLayout>

        <View
            style="@style/line_height_1px"
            android:background="@color/gray_DFDFDF" />



            <LinearLayout
                android:id="@+id/ll_whell"
                android:layout_width="match_parent"
                android:layout_height="224dp"
                android:orientation="horizontal"
                android:background="@color/white_FFFFFF"
                >

                    <com.tikou.library_pickaddress.views.WheelView
                    android:id="@+id/wv_type"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <com.tikou.library_pickaddress.views.WheelView
                    android:id="@+id/wv_hour"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <com.tikou.library_pickaddress.views.WheelView
                    android:id="@+id/wv_minute"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>

    </LinearLayout>

</RelativeLayout>